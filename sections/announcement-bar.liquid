{{ 'announcement-bar.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{ section.id }} .marquee__inner {
    animation: marquee {{ section.settings.marquee_speed }}s linear infinite;
    font-size: {{ section.settings.font_size }}px;
    font-weight: {{ section.settings.font_weight }};
  }
</style>

{% if section.blocks.size > 0 %}
<div
  id="announcement-bar"
  class="announcement-bar sticky-promo-wrap section-{{ section.id }} color-{{ section.settings.text_color_scheme }}"
  role="region"
  aria-label="Announcement bar"
>
  <div class="promo-bar-wrap" role="toolbar">
    <div class="marquee-text">
      <p class="marquee__inner">
        {% for i in (1..8) %}
          {% for block in section.blocks %}
            <span {% unless forloop.parentloop.first %}aria-hidden="true"{% endunless %}>
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" aria-label="{{ block.settings.text }}">
                  {{ block.settings.text }}
                </a>
              {% else %}
                {{ block.settings.text }}
              {% endif %}
            </span>
          {% endfor %}
        {% endfor %}
      </p>
    </div>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "Announcement bar",
  "max_blocks": 12,
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "range",
      "id": "marquee_speed",
      "label": "Marquee speed",
      "min": 10,
      "max": 60,
      "step": 1,
      "unit": "s",
      "default": 20
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 13
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "default": "500",
      "options": [
        { "value": "400", "label": "Regular" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi Bold" },
        { "value": "700", "label": "Bold" }
      ]
    },
    {
      "type": "color_scheme",
      "id": "text_color_scheme",
      "label": "Color scheme"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Free shipping on orders over $50"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement bar",
      "blocks": [
        { "type": "announcement" }
      ]
    }
  ]
}
{% endschema %}
