        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Subscribe"
        }
      ]
    },
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "select",
          "id": "block_width",
          "label": "Block width",
          "options": [
            { "value": "5", "label": "5%" },
            { "value": "10", "label": "10%" },
            { "value": "15", "label": "15%" },
            { "value": "20", "label": "20%" },
            { "value": "25", "label": "25%" },
            { "value": "33", "label": "33%" },
            { "value": "40", "label": "40%" },
            { "value": "45", "label": "45%" },
            { "value": "50", "label": "50%" }
          ],
          "default": "33"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Menu title",
          "default": "Footer menu"
        },
