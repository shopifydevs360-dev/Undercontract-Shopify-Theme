{% doc %}
  Renders a horizontal row of blocks.
  @example
  {% content_for 'block', type: 'row', id: 'row' %}
{% enddoc %}

<div
  class="layout-row"
  style="
    align-items: {{ block.settings.align_items }};
    justify-content: {{ block.settings.justify_content }};
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding }}px;
  "
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>

{% stylesheet %}
  .layout-row {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Row Layout",
  "blocks": [{ "type": "@theme" }],
  "settings": [
    {
      "type": "select",
      "id": "align_items",
      "label": "Align items (cross-axis)",
      "default": "center",
      "options": [
        { "value": "flex-start", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Bottom" },
        { "value": "stretch", "label": "Stretch" }
      ]
    },
    {
      "type": "select",
      "id": "justify_content",
      "label": "Justify content (main-axis)",
      "default": "space-between",
      "options": [
        { "value": "flex-start", "label": "Start" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "End" },
        { "value": "space-between", "label": "Space between" },
        { "value": "space-around", "label": "Space around" }
      ]
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap between items",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "default": 0,
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Row Layout",
      "category": "Layout"
    }
  ]
}
{% endschema %}
